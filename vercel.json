{
    "version": 2,
    "builds": [
      {
        "src": "server.js",
        "use": "@vercel/node",
        "config": {
          "maxDuration": 30 
        }
      },
      {
        "src": "public/**",
        "use": "@vercel/static" 
      }
    ],
    "routes": [
      {
        "src": "/(.*)",
        "dest": "server.js" 
      },
      {
        "src": "/(.*)",
        "dest": "public/$1"
      }
    ]
  }